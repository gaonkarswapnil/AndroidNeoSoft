<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.DataActivity">

    <Button
        android:id="@+id/btnActivity2Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Activity"
        app:layout_constraintBottom_toTopOf="@+id/btnActivity2Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnActivity2Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Fragment"
        app:layout_constraintBottom_toTopOf="@+id/btnFragment2Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActivity2Activity" />

    <Button
        android:id="@+id/btnFragment2Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment to Activity"
        app:layout_constraintBottom_toTopOf="@+id/btnFragment2Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActivity2Fragment" />

    <Button
        android:id="@+id/btnFragment2Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment to Fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFragment2Activity" />
</androidx.constraintlayout.widget.ConstraintLayout>